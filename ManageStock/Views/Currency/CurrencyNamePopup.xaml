<common:CustomWindow x:Class="ManageStock.Views.Currency.CurrencyNamePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:Application.Common;assembly=Application.Common" 
        WindowStartupLocation="CenterOwner"
        Title="Devise" ResizeMode="NoResize" SizeToContent="Height" Width="450">
    <StackPanel Margin="20">
        <TextBlock Text="Entrer le nom de la devise : "/>
        <TextBox Text="{Binding DeviseName}" CharacterCasing="Upper" Height="30" Margin="0,5,0,0"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Annuler" Width="90" IsCancel="True" Click="CancelAddCurrencyButtonOnClick"/>
            <Button Content="Ajouter" Width="90" Click="AddNewCurrencyButtonOnClick" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</common:CustomWindow>
